-- ðŸ”¥ VÄ¨ HUB FINAL REAL WORK ðŸ”¥
-- =========================

local Players = game:GetService("Players")
local player = Players.LocalPlayer
local Lighting = game:GetService("Lighting")

-------------------------------------------------
-- GUI
-------------------------------------------------
local gui = Instance.new("ScreenGui", game.CoreGui)
gui.Name = "ViHub"

-------------------------------------------------
-- MENU BUTTON
-------------------------------------------------
local menu = Instance.new("TextButton", gui)
menu.Size = UDim2.fromOffset(55,55)
menu.Position = UDim2.new(0,20,0.6,0)
menu.Text = "VÄ¨"
menu.BackgroundColor3 = Color3.fromRGB(255,70,70)
menu.TextScaled = true

-------------------------------------------------
-- FRAME
-------------------------------------------------
local frame = Instance.new("Frame", gui)
frame.Size = UDim2.fromOffset(220,320)
frame.Position = UDim2.new(0,90,0.4,0)
frame.BackgroundColor3 = Color3.fromRGB(30,30,30)
frame.Visible = false

local layout = Instance.new("UIListLayout", frame)
layout.Padding = UDim.new(0,5)

-------------------------------------------------
-- BUTTON MAKER
-------------------------------------------------
local function btn(text)
	local b = Instance.new("TextButton", frame)
	b.Size = UDim2.new(1,0,0,38)
	b.Text = text
	b.BackgroundColor3 = Color3.fromRGB(70,70,70)
	b.TextScaled = true
	return b
end

local flyBtn = btn("Fly")
local speedBtn = btn("Speed")
local noclipBtn = btn("NoClip")
local farmBtn = btn("Auto Farm")
local lagBtn = btn("Fix Lag")
local closeBtn = btn("Close")

-------------------------------------------------
-- TOGGLE MENU
-------------------------------------------------
menu.MouseButton1Click:Connect(function()
	frame.Visible = not frame.Visible
end)

-------------------------------------------------
-- FLY (SIÃŠU á»”N Äá»ŠNH)
-------------------------------------------------
local flying=false

flyBtn.MouseButton1Click:Connect(function()
	flying = not flying

	while flying and player.Character do
		local hrp = player.Character:FindFirstChild("HumanoidRootPart")
		if hrp then
			hrp.Velocity = workspace.CurrentCamera.CFrame.LookVector * 80
		end
		task.wait()
	end
end)

-------------------------------------------------
-- SPEED
-------------------------------------------------
local speed=false
speedBtn.MouseButton1Click:Connect(function()
	local hum = player.Character:FindFirstChild("Humanoid")
	speed = not speed
	hum.WalkSpeed = speed and 45 or 16
end)

-------------------------------------------------
-- NOCLIP
-------------------------------------------------
local noclip=false
noclipBtn.MouseButton1Click:Connect(function()
	noclip = not noclip
end)

game:GetService("RunService").Stepped:Connect(function()
	if noclip and player.Character then
		for _,v in pairs(player.Character:GetDescendants()) do
			if v:IsA("BasePart") then
				v.CanCollide=false
			end
		end
	end
end)

-------------------------------------------------
-- ðŸš€ AUTO FARM BLOX FRUITS (REAL)
-------------------------------------------------
local farming=false

farmBtn.MouseButton1Click:Connect(function()
	farming = not farming

	while farming do
		local char = player.Character
		local hrp = char and char:FindFirstChild("HumanoidRootPart")
		local tool = char and char:FindFirstChildOfClass("Tool")

		if hrp then
			for _,mob in pairs(workspace.Enemies:GetChildren()) do
				if mob:FindFirstChild("HumanoidRootPart")
				and mob:FindFirstChild("Humanoid")
				and mob.Humanoid.Health > 0 then

					hrp.CFrame = mob.HumanoidRootPart.CFrame * CFrame.new(0,0,-3)

					if tool then
						tool:Activate() -- Ä‘Ã¡nh
					end

					break
				end
			end
		end

		task.wait(0.2)
	end
end)

-------------------------------------------------
-- FIX LAG
-------------------------------------------------
lagBtn.MouseButton1Click:Connect(function()
	Lighting.GlobalShadows=false
	for _,v in pairs(workspace:GetDescendants()) do
		if v:IsA("BasePart") then
			v.Material = Enum.Material.SmoothPlastic
		end
	end
end)

-------------------------------------------------
-- CLOSE
-------------------------------------------------
closeBtn.MouseButton1Click:Connect(function()
	frame.Visible=false
end)
