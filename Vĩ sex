--// =========================
--// üî• Vƒ® HUB FULL MENU üî•
--// =========================

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local Lighting = game:GetService("Lighting")

local player = Players.LocalPlayer

-------------------------------------------------
-- GUI
-------------------------------------------------
local gui = Instance.new("ScreenGui", player.PlayerGui)
gui.ResetOnSpawn = false
gui.IgnoreGuiInset = true
gui.DisplayOrder = 999999

-------------------------------------------------
-- üåà rainbow
-------------------------------------------------
local function rainbow(obj)
	task.spawn(function()
		local h = 0
		while obj.Parent do
			h += 0.01
			if h > 1 then h = 0 end
			obj.BackgroundColor3 = Color3.fromHSV(h,1,1)
			task.wait()
		end
	end)
end

-------------------------------------------------
-- MENU BUTTON
-------------------------------------------------
local menuBtn = Instance.new("TextButton", gui)
menuBtn.Size = UDim2.fromOffset(70,70)
menuBtn.Position = UDim2.new(1,-90,1,-120)
menuBtn.Text = "Vƒ®"
menuBtn.TextScaled = true
menuBtn.TextColor3 = Color3.new(1,1,1)
menuBtn.Font = Enum.Font.GothamBlack
menuBtn.Draggable = true

Instance.new("UICorner", menuBtn).CornerRadius = UDim.new(1,0)
rainbow(menuBtn)

-------------------------------------------------
-- MAIN FRAME
-------------------------------------------------
local frame = Instance.new("Frame", gui)
frame.Size = UDim2.fromOffset(260,380)
frame.Position = UDim2.new(1,-280,0.5,-190)
frame.Visible = false
frame.BackgroundColor3 = Color3.fromRGB(25,25,25)

Instance.new("UICorner", frame).CornerRadius = UDim.new(0,18)

local layout = Instance.new("UIListLayout", frame)
layout.Padding = UDim.new(0,6)

-------------------------------------------------
-- BUTTON CREATOR
-------------------------------------------------
local function makeBtn(text)
	local b = Instance.new("TextButton", frame)
	b.Size = UDim2.new(0.92,0,0,40)
	b.Text = text
	b.TextScaled = true
	b.TextColor3 = Color3.new(1,1,1)
	Instance.new("UICorner", b).CornerRadius = UDim.new(0,12)
	rainbow(b)
	return b
end

-------------------------------------------------
-- BUTTONS
-------------------------------------------------
local autoHitBtn = makeBtn("‚öî Auto Hit")
local autoClickBtn = makeBtn("üñ± Auto Click")

local flyBtn = makeBtn("‚úà Fly")
local speedBtn = makeBtn("‚ö° Speed")
local noclipBtn = makeBtn("üëª NoClip")

local lagBtn = makeBtn("üöÄ Fix Lag")
local tpBtn = makeBtn("üìç Teleport Player")

local closeBtn = makeBtn("‚ùå Close")

-------------------------------------------------
-- TOGGLE MENU
-------------------------------------------------
menuBtn.Activated:Connect(function()
	frame.Visible = not frame.Visible
end)

-------------------------------------------------
-- ‚öî AUTO HIT
-------------------------------------------------
local autoHit=false

RunService.Heartbeat:Connect(function()
	if autoHit then
		local char = player.Character
		local hrp = char and char:FindFirstChild("HumanoidRootPart")
		if not hrp then return end

		for _,v in pairs(workspace:GetDescendants()) do
			if v:IsA("Model") and v:FindFirstChild("Humanoid")
			and v:FindFirstChild("HumanoidRootPart")
			and v.Name ~= player.Name then

				hrp.CFrame = v.HumanoidRootPart.CFrame * CFrame.new(0,0,-3)
				break
			end
		end
	end
end)

autoHitBtn.Activated:Connect(function()
	autoHit = not autoHit
end)

-------------------------------------------------
-- üñ± AUTO CLICK
-------------------------------------------------
local autoClick=false

autoClickBtn.Activated:Connect(function()
	autoClick = not autoClick

	task.spawn(function()
		while autoClick do
			mouse1click()
			task.wait(0.1)
		end
	end)
end)

-------------------------------------------------
-- ‚úà FLY
-------------------------------------------------
local flying=false
local bv

flyBtn.Activated:Connect(function()
	local char = player.Character
	local hum = char:WaitForChild("Humanoid")
	local hrp = char:WaitForChild("HumanoidRootPart")

	if not flying then
		bv = Instance.new("BodyVelocity", hrp)
		bv.MaxForce = Vector3.new(1e9,1e9,1e9)

		RunService:BindToRenderStep("Fly",0,function()
			bv.Velocity = hum.MoveDirection * 80
		end)
	else
		RunService:UnbindFromRenderStep("Fly")
		bv:Destroy()
	end

	flying = not flying
end)

-------------------------------------------------
-- ‚ö° SPEED
-------------------------------------------------
local speed=false
speedBtn.Activated:Connect(function()
	local hum = player.Character:WaitForChild("Humanoid")
	speed = not speed
	hum.WalkSpeed = speed and 40 or 16
end)

-------------------------------------------------
-- üëª NOCLIP
-------------------------------------------------
local noclip=false

RunService.Stepped:Connect(function()
	if noclip and player.Character then
		for _,v in pairs(player.Character:GetDescendants()) do
			if v:IsA("BasePart") then
				v.CanCollide = false
			end
		end
	end
end)

noclipBtn.Activated:Connect(function()
	noclip = not noclip
end)

-------------------------------------------------
-- üöÄ FIX LAG
-------------------------------------------------
lagBtn.Activated:Connect(function()
	Lighting.GlobalShadows = false

	for _,v in pairs(workspace:GetDescendants()) do
		if v:IsA("BasePart") then
			v.Material = Enum.Material.SmoothPlastic
		end
	end
end)

-------------------------------------------------
-- üìç TELEPORT PLAYER
-------------------------------------------------
tpBtn.Activated:Connect(function()
	local char = player.Character
	local hrp = char and char:FindFirstChild("HumanoidRootPart")

	for _,plr in pairs(Players:GetPlayers()) do
		if plr ~= player and plr.Character and plr.Character:FindFirstChild("HumanoidRootPart") then
			hrp.CFrame = plr.Character.HumanoidRootPart.CFrame
			break
		end
	end
end)

-------------------------------------------------
-- CLOSE
-------------------------------------------------
closeBtn.Activated:Connect(function()
	frame.Visible=false
end)
