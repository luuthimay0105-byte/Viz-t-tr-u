-- ===== CLEAN MOBILE FLY (NO BACKDOOR) =====

local player = game.Players.LocalPlayer
local RunService = game:GetService("RunService")

-- Splash
local s = Instance.new("ScreenGui", game.CoreGui)
local t = Instance.new("TextLabel", s)
t.Size = UDim2.new(1,0,1,0)
t.BackgroundColor3 = Color3.new(0,0,0)
t.TextColor3 = Color3.new(1,1,1)
t.TextScaled = true
t.Text = "vĩ địt trâu"
task.wait(1.5)
s:Destroy()

-- GUI
local gui = Instance.new("ScreenGui", game.CoreGui)

local frame = Instance.new("Frame", gui)
frame.Size = UDim2.fromOffset(240,180)
frame.Position = UDim2.new(0.5,-120,0.6,-90)
frame.BackgroundColor3 = Color3.fromRGB(25,25,25)
frame.Active = true
frame.Draggable = true
Instance.new("UICorner", frame)

-- Variables
local flying = false
local speed = 50
local bv, bg

local function setFly(state)
    local char = player.Character or player.CharacterAdded:Wait()
    local hrp = char:WaitForChild("HumanoidRootPart")

    if state then
        flying = true

        bv = Instance.new("BodyVelocity", hrp)
        bv.MaxForce = Vector3.new(1e9,1e9,1e9)

        bg = Instance.new("BodyGyro", hrp)
        bg.MaxTorque = Vector3.new(1e9,1e9,1e9)

        RunService:BindToRenderStep("Fly", 0, function()
            if flying then
                bv.Velocity = workspace.CurrentCamera.CFrame.LookVector * speed
                bg.CFrame = workspace.CurrentCamera.CFrame
            end
        end)
    else
        flying = false
        RunService:UnbindFromRenderStep("Fly")
        if bv then bv:Destroy() end
        if bg then bg:Destroy() end
    end
end

-- Fly button
local btn = Instance.new("TextButton", frame)
btn.Size = UDim2.new(0.9,0,0,50)
btn.Position = UDim2.new(0.05,0,0.2,0)
btn.Text = "BẬT FLY"
btn.TextScaled = true

btn.MouseButton1Click:Connect(function()
    setFly(not flying)
    btn.Text = flying and "TẮT FLY" or "BẬT FLY"
end)

-- Speed label
local label = Instance.new("TextLabel", frame)
label.Size = UDim2.new(1,0,0,30)
label.Position = UDim2.new(0,0,0.55,0)
label.BackgroundTransparency = 1
label.TextScaled = true
label.Text = "Speed: 50"

-- + button
local plus = Instance.new("TextButton", frame)
plus.Size = UDim2.new(0.4,0,0,40)
plus.Position = UDim2.new(0.55,0,0.75,0)
plus.Text = "+"

plus.MouseButton1Click:Connect(function()
    speed += 10
    label.Text = "Speed: "..speed
end)

-- - button
local minus = Instance.new("TextButton", frame)
minus.Size = UDim2.new(0.4,0,0,40)
minus.Position = UDim2.new(0.05,0,0.75,0)
minus.Text = "-"

minus.MouseButton1Click:Connect(function()
    speed = math.max(10, speed - 10)
    label.Text = "Speed: "..speed
end)
