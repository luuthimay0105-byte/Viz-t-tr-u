--// =================================
-- ðŸ”¥ LÃ’ XO HUB FULL MENU FINAL
-- =================================

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")

local player = Players.LocalPlayer

local gui = Instance.new("ScreenGui", game.CoreGui)
gui.ResetOnSpawn = false

-------------------------------------------------
-- TEXT FLASH
-------------------------------------------------
local function flashText()

	local t = Instance.new("TextLabel", gui)
	t.Size = UDim2.new(1,0,1,0)
	t.BackgroundTransparency = 1
	t.Text = "chim nháº£y"
	t.TextScaled = true
	t.Font = Enum.Font.Arcade
	t.TextColor3 = Color3.fromRGB(0,255,150)

	task.wait(0.1)
	t:Destroy()
end

-------------------------------------------------
-- ðŸ’¥ BOOM TO
-------------------------------------------------
local function boom(pos)

	local p = Instance.new("Part", workspace)
	p.Anchored = true
	p.CanCollide = false
	p.Shape = Enum.PartType.Ball
	p.Material = Enum.Material.Neon
	p.Color = Color3.fromRGB(255,200,0)
	p.Position = pos
	p.Size = Vector3.new(2,2,2)

	for i=1,12 do
		p.Size += Vector3.new(7,7,7)
		p.Transparency += 0.07
		task.wait(0.03)
	end

	p:Destroy()
end

-------------------------------------------------
-- TOOL CHIM NHáº¢Y
-------------------------------------------------
local function giveChim()

	local tool = Instance.new("Tool")
	tool.Name = "chim nháº£y"

	local handle = Instance.new("Part", tool)
	handle.Name = "Handle"
	handle.Size = Vector3.new(1,1,1)
	handle.Material = Enum.Material.Neon
	handle.Color = Color3.fromRGB(255,255,0)

	local lastAir = false

	tool.Equipped:Connect(function()
		local h = player.Character:FindFirstChildOfClass("Humanoid")
		if h then h.WalkSpeed = 45 end
	end)

	tool.Unequipped:Connect(function()
		local h = player.Character:FindFirstChildOfClass("Humanoid")
		if h then h.WalkSpeed = 16 end
	end)

	tool.Activated:Connect(function()
		player.Character.HumanoidRootPart.Velocity = Vector3.new(0,140,0)
		flashText()
	end)

	RunService.Heartbeat:Connect(function()

		if tool.Parent ~= player.Character then return end

		local hum = player.Character:FindFirstChildOfClass("Humanoid")

		if hum.FloorMaterial == Enum.Material.Air then
			lastAir = true
		else
			if lastAir then
				lastAir = false
				boom(player.Character.HumanoidRootPart.Position)
			end
		end
	end)

	tool.Parent = player.Backpack
end

-------------------------------------------------
-- TOOL DASH
-------------------------------------------------
local function giveDash()

	local tool = Instance.new("Tool")
	tool.Name = "dash"

	local handle = Instance.new("Part", tool)
	handle.Name = "Handle"
	handle.Size = Vector3.new(1,1,1)
	handle.Material = Enum.Material.Neon
	handle.Color = Color3.fromRGB(0,170,255)

	tool.Activated:Connect(function()
		local root = player.Character.HumanoidRootPart
		root.Velocity = root.CFrame.LookVector * 220
	end)

	tool.Parent = player.Backpack
end

-------------------------------------------------
-- GUI MENU
-------------------------------------------------
local main = Instance.new("Frame", gui)
main.Size = UDim2.fromOffset(260,180)
main.Position = UDim2.new(0.5,-130,0.6,0)
main.BackgroundColor3 = Color3.fromRGB(35,35,35)
main.Active = true
main.Draggable = true

local title = Instance.new("TextLabel", main)
title.Size = UDim2.new(1,0,0,35)
title.Text = "LÃ’ XO HUB"
title.BackgroundColor3 = Color3.fromRGB(0,170,255)
title.TextColor3 = Color3.new(1,1,1)
title.TextScaled = true
title.Font = Enum.Font.Arcade

-------------------------------------------------
-- TAB 1
-------------------------------------------------
local tab1 = Instance.new("TextButton", main)
tab1.Size = UDim2.fromOffset(110,35)
tab1.Position = UDim2.new(0,10,0,50)
tab1.Text = "ChiÃªu lÃ² xo"
tab1.Font = Enum.Font.Arcade
tab1.TextScaled = true

tab1.MouseButton1Click:Connect(function()
	giveChim()
	giveDash()
end)

-------------------------------------------------
-- TAB 2 (100 Láº¦N)
-------------------------------------------------
local tab2 = Instance.new("TextButton", main)
tab2.Size = UDim2.fromOffset(110,35)
tab2.Position = UDim2.new(0,10,0,100)
tab2.Text = "Hiá»‡u á»©ng"
tab2.Font = Enum.Font.Arcade
tab2.TextScaled = true

local running = false

tab2.MouseButton1Click:Connect(function()

	if running then return end
	running = true

	task.spawn(function()

		for i = 1,100 do
			flashText()
			task.wait(0.05)
		end

		running = false
	end)

end)

-------------------------------------------------
-- INTRO
-------------------------------------------------
flashText()
