--// ===== SIMPLE GUI LOADER BY NGDKHANH ===== //--

local URL = "https://raw.githubusercontent.com/USERNAME/REPO/main/script.lua" -- <<< ĐỔI LINK Ở ĐÂY

-- Services
local Players = game:GetService("Players")
local player = Players.LocalPlayer

-- GUI
local gui = Instance.new("ScreenGui", game.CoreGui)
gui.Name = "LoaderGUI"

-- Main Frame
local main = Instance.new("Frame", gui)
main.Size = UDim2.new(0, 260, 0, 150)
main.Position = UDim2.new(0.35, 0, 0.3, 0)
main.BackgroundColor3 = Color3.fromRGB(25,25,25)
main.BorderSizePixel = 0
main.Active = true
main.Draggable = true

-- Corner
Instance.new("UICorner", main).CornerRadius = UDim.new(0,12)

-- Title
local title = Instance.new("TextLabel", main)
title.Size = UDim2.new(1,0,0,40)
title.BackgroundTransparency = 1
title.Text = "DEV : NGDKHANH LOADER"
title.TextColor3 = Color3.new(1,1,1)
title.TextScaled = true
title.Font = Enum.Font.GothamBold

-- Status
local status = Instance.new("TextLabel", main)
status.Size = UDim2.new(1,0,0,25)
status.Position = UDim2.new(0,0,0.3,0)
status.BackgroundTransparency = 1
status.Text = "Status : Ready"
status.TextColor3 = Color3.fromRGB(170,170,170)
status.TextScaled = true
status.Font = Enum.Font.Gotham

-- Load Button
local loadBtn = Instance.new("TextButton", main)
loadBtn.Size = UDim2.new(0.8,0,0,40)
loadBtn.Position = UDim2.new(0.1,0,0.55,0)
loadBtn.Text = "LOAD SCRIPT"
loadBtn.BackgroundColor3 = Color3.fromRGB(40,120,255)
loadBtn.TextColor3 = Color3.new(1,1,1)
loadBtn.TextScaled = true
loadBtn.Font = Enum.Font.GothamBold
Instance.new("UICorner", loadBtn)

-- Hide Button
local hideBtn = Instance.new("TextButton", main)
hideBtn.Size = UDim2.new(0,30,0,30)
hideBtn.Position = UDim2.new(1,-35,0,5)
hideBtn.Text = "-"
hideBtn.BackgroundColor3 = Color3.fromRGB(255,80,80)
hideBtn.TextColor3 = Color3.new(1,1,1)
hideBtn.TextScaled = true
Instance.new("UICorner", hideBtn)

-- Toggle open/close
hideBtn.MouseButton1Click:Connect(function()
	main.Visible = false
end)

-- Mini icon when hidden
local openBtn = Instance.new("TextButton", gui)
openBtn.Size = UDim2.new(0,50,0,50)
openBtn.Position = UDim2.new(0.02,0,0.7,0)
openBtn.Text = "OPEN"
openBtn.BackgroundColor3 = Color3.fromRGB(40,120,255)
openBtn.TextColor3 = Color3.new(1,1,1)
openBtn.Visible = false
Instance.new("UICorner", openBtn)

hideBtn.MouseButton1Click:Connect(function()
	main.Visible = false
	openBtn.Visible = true
end)

openBtn.MouseButton1Click:Connect(function()
	main.Visible = true
	openBtn.Visible = false
end)

-- Load function
loadBtn.MouseButton1Click:Connect(function()
	status.Text = "Status : Loading..."

	local success, err = pcall(function()
		loadstring(game:HttpGet(URL))()
	end)

	if success then
		status.Text = "Status : Success ✅"
	else
		status.Text = "Status : Error ❌"
		warn(err)
	end
end)
